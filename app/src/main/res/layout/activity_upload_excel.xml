<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    android:gravity="top"
    android:padding="0dp"
    android:background="#F8FDFE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Rounded Box -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FF775F"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Welcome in CargoFit"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Upload your CSV file to find your CargoFit!"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Upload Box -->
    <LinearLayout
        android:id="@+id/uploadBox"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/upload_rounded_box"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/uploadIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_upload" />

        <TextView
            android:id="@+id/uploadText"
            android:layout_marginTop="16dp"
            android:text="Upload CSV File"
            android:textSize="20sp"
            android:textColor="#2A2A2A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Selected File Name -->
    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp" />

    <!-- Read Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="calculate CargoFit"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        app:cornerRadius="15dp"
        android:backgroundTint="#FF775F"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

</LinearLayout>